# Пример .env для ЭкоБарахолка
# Секретный ключ Flask
SECRET_KEY=change-me-in-production

# Подключение к PostgreSQL (предпочтительно)
# Формат: postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgresql+psycopg2://ecobg_user:ecobg_pass@localhost:5432/ecobg_db

# Альтернатива: MySQL (для пользователей MySQL Workbench)
# Требуется драйвер PyMySQL в requirements.txt
# Формат: mysql+pymysql://USER:PASSWORD@HOST:PORT/DBNAME?charset=utf8mb4
# Пример:
# DATABASE_URL=mysql+pymysql://eco_user:eco_pass@localhost:3306/ecobg_db?charset=utf8mb4

# Путь для загрузки файлов (изображений/документов)
UPLOAD_FOLDER=./app/static/uploads
# Размер загружаемого файла (в байтах)
MAX_CONTENT_LENGTH=16777216
